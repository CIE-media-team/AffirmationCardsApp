<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dylan.affirmationcardsapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon_logo_words"
        android:roundIcon="@mipmap/launcher_icon_logo_words_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".FirstRunActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Repeating_activity" />
        <activity android:name=".JournalActivity" />
        <activity
            android:name=".InstructionActivity"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main2Activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".FirstRunActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
        <activity
            android:name=".CardActivity"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CollectionActivity"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CollectionEnlarge"
            android:parentActivityName=".CollectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddCard"
            android:label="@string/title_activity_add_card"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dylan.affirmationcardsapp.Main2Activity" />
        </activity>
    </application>

</manifest>